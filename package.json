{
	"name": "vscode-node-version-pal",
	"displayName": "Node Version Pal",
	"description": "Shows the Node.js version from .nvmrc/.node-version files in the status bar with nvm/fnm integration",
	"version": "0.0.5",
	"publisher": "guidozam",
	"license": "MIT",
	"icon": "assets/icon.png",
	"preview": false,
	"galleryBanner": {
		"theme": "light"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/GuidoZam/vscode-node-version-pal.git"
	},
	"bugs": {
		"url": "https://github.com/GuidoZam/vscode-node-version-pal/issues"
	},
	"homepage": "https://github.com/GuidoZam/vscode-node-version-pal#readme",
	"keywords": [
		"nodejs",
		"node",
		"nvm",
		"fnm",
		"version",
		"status bar",
		"nvmrc",
		"node-version"
	],
	"engines": {
		"vscode": "^1.74.0",
		"node": ">=18.0.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./dist/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "nodeVersionPal.refresh",
				"title": "Refresh Node Version",
				"category": "Node Version Pal"
			},
			{
				"command": "nodeVersionPal.switchVersion",
				"title": "Switch Node Version",
				"category": "Node Version Pal"
			},
			{
				"command": "nodeVersionPal.createVersionFile",
				"title": "Create Node Version File",
				"category": "Node Version Pal"
			}
		]
	},
	"scripts": {
		"vscode:prepublish": "npm run package",
		"compile": "webpack",
		"watch": "webpack --watch",
		"package": "webpack --mode production --devtool hidden-source-map",
		"pretest": "npx tsc",
		"lint": "npx eslint src --ext ts",
		"test": "npm run pretest && node ./out/test/runTest.js",
		"test:ci": "npm run pretest && xvfb-run -a node ./out/test/runTest.js",
		"vsce:package": "vsce package",
		"vsce:package:prerelease": "vsce package --pre-release",
		"vsce:publish": "vsce publish",
		"vsce:publish:prerelease": "vsce publish --pre-release",
		"set-preview": "node scripts/set-preview.js",
		"set-preview:true": "node scripts/set-preview.js true",
		"set-preview:false": "node scripts/set-preview.js false"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.10",
		"@types/node": "20.x",
		"@types/semver": "^7.7.1",
		"@types/vscode": "^1.74.0",
		"@typescript-eslint/eslint-plugin": "^5.59.1",
		"@typescript-eslint/parser": "^5.59.1",
		"@vscode/test-electron": "^2.3.0",
		"@vscode/vsce": "^3.7.1",
		"eslint": "^8.39.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"ts-loader": "^9.5.4",
		"typescript": "^4.9.4",
		"webpack": "^5.105.2",
		"webpack-cli": "^6.0.1"
	},
	"dependencies": {
		"semver": "^7.5.4"
	}
}
